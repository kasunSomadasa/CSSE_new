<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/morning_sunshine"
    tools:context="com.example.kasun.busysms.alarm.alarmFire">


    <ImageButton
        android:id="@+id/imageButton_AlarmOff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/input_outline"
        app:srcCompat="@drawable/alarm_off_btn"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/textView15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/common_signin_btn_default_background"
        android:textStyle="italic"
        android:textSize="20dp"
        android:layout_marginBottom="11dp"
        android:text="Alarm is Triggering....."
        android:layout_above="@+id/imageButton_AlarmOff"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/textView16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageButton_AlarmOff"
        android:layout_centerHorizontal="true"
        android:textColor="@color/common_signin_btn_default_background"
        android:textStyle="bold"
        android:textSize="25dp"
        android:text="OFF" />
</RelativeLayout>
