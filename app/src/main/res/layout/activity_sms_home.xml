<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_sms_home"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.kasun.busysms.autoSms.smsHome">
    <!-- this file belongs to auto sms function-->


    <!--previous time display log button -->
    <Button
        android:id="@+id/logButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button_draw"
        android:text="LOG"
        android:textColor="@color/cardview_light_background"
        android:textStyle="normal|bold"
        android:paddingLeft="68dp"
        android:paddingRight="68dp"
        android:layout_marginLeft="164dp"
        />

    <!-- add new time slot button -->
    <Button
        android:id="@+id/newButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button_draw"
        android:text="NEW"
        android:textColor="@color/cardview_light_background"
        android:textStyle="normal|bold"
        android:layout_marginRight="56dp"
        android:paddingLeft="68dp"
        android:paddingRight="68dp"
    />

    <!-- give db status textView -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/displayText"
        android:layout_marginTop="12dp"
        android:layout_below="@+id/silentButton"
        android:layout_centerHorizontal="true" />

    <!-- display log view-->
    <ListView
        android:layout_width="wrap_content"
        android:id="@+id/main_list"
        android:layout_height="match_parent"
        android:paddingTop="5dp"
        android:layout_below="@+id/displayText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <!-- sound control button -->
    <Button
        android:id="@+id/silentButton"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="silent"
        android:padding="5dp"
        android:drawableLeft="@mipmap/ic_vibration_white_24dp"
        android:background="@drawable/button_draw"
        android:textColor="@color/cardview_light_background"
        android:layout_marginTop="55dp"
        android:textStyle="normal|bold"
       />

</RelativeLayout>
