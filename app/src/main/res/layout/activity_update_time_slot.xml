<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.kasun.busysms.autoSms.updateTimeSlot"
   >
    <!-- this file belongs to auto sms function-->


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Time From"
        android:id="@+id/textView4"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <!-- get time picker for "time_from" for update-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/time_from"
        android:layout_below="@+id/textView4"
        android:textColor="#FF000000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Time To"
        android:id="@+id/textView3"
        android:layout_marginTop="32dp"
        android:layout_below="@+id/textView4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <!-- get time picker for "time_to" for update-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/time_to"
        android:layout_below="@+id/textView3"
        android:textColor="#FF000000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Repeat"
        android:id="@+id/textView2"
        android:layout_marginTop="13dp"
        android:layout_below="@+id/view"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


    <!-- get date choose dialog for "repeat"  for update -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/repeat"
        android:layout_below="@+id/textView2"
        android:textColor="#FF000000" />

    <!-- status for update -->
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/status"
        android:textColor="#FF000000"
        android:hint="Status"
        android:layout_marginTop="16dp"
        android:padding="10dp"
        android:background="@drawable/input_outline"
        android:layout_below="@+id/for_sms"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <!-- message for update -->
    <EditText
        android:layout_width="fill_parent"
        android:layout_height="90dp"
        android:id="@+id/messege"
        android:layout_marginTop="10dp"
        android:textColor="#FF000000"
        android:hint="Message"
        android:padding="10dp"
        android:background="@drawable/input_outline"
        android:layout_below="@+id/status"

     />

    <!-- update button -->
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Save Changers"
        android:id="@+id/updateTimeSlot"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="@drawable/button_draw"
        android:textStyle="normal|bold"
        android:textColor="@color/cardview_light_background" />

    <!-- sms check box for update -->
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SMS"
        android:id="@+id/for_sms"
        android:layout_marginLeft="50dp"
        android:checked="false"
        android:textColor="#FF000000"
        android:layout_below="@+id/textView"
     />
    <!-- call check box for update -->
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CALL"
        android:id="@+id/for_call"
        android:checked="false"
        android:layout_marginLeft="230dp"
        android:textColor="#FF000000"
        android:layout_below="@+id/textView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="For"
        android:layout_marginTop="15dp"
        android:id="@+id/textView"
        android:layout_below="@+id/repeat" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#FF000000"
        android:layout_below="@+id/time_from"
        android:layout_marginTop="5dp"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#FF000000"
        android:layout_below="@+id/repeat"
        android:layout_marginTop="5dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#FF000000"
        android:layout_below="@+id/for_call"
        android:layout_marginTop="5dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#FF000000"
        android:layout_below="@+id/time_to"
        android:layout_marginTop="5dp"
        android:id="@+id/view" />

</RelativeLayout>
